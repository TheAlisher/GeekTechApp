<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.profile.ProfileFragment">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/Blue"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/image_profile_user_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/contentDescription_image_user_photo"
        android:src="@drawable/icon_navigation_account_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/White"
        android:text="NICKNAME"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_user_photo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="70dp"
        android:id="@+id/constraint_layout"
        app:layout_constraintTop_toTopOf="@+id/tv_nick_name"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">



    <TextView
        android:id="@+id/tv_fio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_fio_name"
        android:textColor="@color/Black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:text="Чаргынов Нургазы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fio"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/Gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_group"
        android:layout_marginTop="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fio"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_group_name"
        android:textColor="@color/Black"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fio_name"
        android:textSize="20sp"
        android:text="Android 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_group"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/Gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_git"
        android:layout_marginTop="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_group"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:text="GIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_git_name"
        android:textColor="@color/Black"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_name"
        android:textSize="20sp"
        android:text="NChargynov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_git"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/Gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_edit_profile"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_git_name"
        android:text="Edit Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>