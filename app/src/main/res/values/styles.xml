<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/LightDarkModeTransition</item>
    </style>

    <!--Light / Dark mode-->
    <style name="LightDarkModeTransition">
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
    </style>

    <!--ProfileFragment-->

    <style name="EditProfileStyles">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/defaultTextIcon</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">none</item>
        <item name="android:enabled">false</item>
    </style>


</resources>